@model CourseViewModel
<div class="class card-body p-4">
    <form method="post" class="row" asp-controller="Home" asp-action="Add">
        <div class="row">
            <div class="col-10">
                <div class="border p-3">

           
                    <div class="form-floating py-2 col-12">
                        <select asp-for="SelectedCourses" asp-items="@Model.LstCourses" class="form-control select-control border-0 shadow">
                       

                        </select>
                    </div>
             
           


                    <div class="row  pt-2">
