@model Course
@{
    ViewData["Title"] = "Create Product";

}

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-graident ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.CourseId!=null ? "Update" :"Create")  Course</h2>

            </div>

        </div>

    </div>

    <div class="class card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        <input hidden asp-for="CourseId" />
                        <input hidden asp-for="CourseImg" />

                        <div class="form-floating py-2 col-12">
                            <input asp-for="CourseName" class="form-control border-0 shadow" />
                            <label asp-for="CourseName" class="ms-2"></label>
                            <span asp-validation-for="CourseName" class="text-danger"></span>
                        </div>
                        <div class=" py-2 col-12">
                            <label asp-for="CourseDescription" class="ms-2"></label>

                            <textarea asp-for="CourseDescription" class="form-control  text-muted border-0 shadow"></textarea>
                            <span asp-validation-for="CourseDescription" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Credits" class="form-control border-0 shadow" />
                            <label asp-for="Credits" class="ms-2"></label>
                            <span asp-validation-for="Credits" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Grade" class="form-control border-0 shadow" />
                            <label asp-for="Grade" class="ms-2"></label>
                            <span asp-validation-for="Grade" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="Type" class="form-control select-control border-0 shadow">
                                <option>Mandatory</option>
                                <option>Optional</option>

                            </select>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="Status" class="form-control select-control border-0 shadow">
                                <option>Opened</option>
                                <option>Closed</option>

                            </select>
                        </div>                     
                
                        <div class="form-floating py-2 col-12">
                            <input type="file" id="fileInput" name="file" class="form-control border-0 shadow" onchange="previewImage(event)" />
                            <label asp-for="CourseImg" class="ms-2"></label>
                            <span asp-validation-for="CourseImg"></span>
                        </div>
                    
                        
                        <div class="row  pt-2">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-primary form-control"> @(Model.CourseId != null ? "Update" : "Create")  Course</button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Course" asp-action="Index" class="btn btn-outline-primary border form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                    <img src="@Model.CourseImg" width="100%"
                    <img id="imagePreview" src="#" alt="Course Image Preview" style="max-width: 100%; height: auto; display: none;" />

                </div>

            </div>
        </form>

    </div>
</div>
@section Scripts{
    <script>
        function previewImage(event) {
            var fileInput = event.target;
            var file = fileInput.files[0];
            var reader = new FileReader();

            reader.onload = function(e) {
                var imagePreview = document.getElementById('imagePreview');
                imagePreview.src = e.target.result;
                imagePreview.style.display = 'block';
            };

            reader.readAsDataURL(file);
        }
    </script>

  
}